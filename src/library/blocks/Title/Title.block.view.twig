<style>
	.b-Title {
		background-image: url({{fields.background.url}});
	}
</style>
<div class="b-Title">
	<div class="b-Title__title">
		<div class="b-Title__title-text">
			<div class="b-Title__title-text-big">{{fields.bigtext}}</div>
			{% if fields.smalltext %}
				<div class="b-Title__title-text-small">{{fields.smalltext}}</div>
			{% else %}
				{% include "modules/Search/Search.module.twig" %}
			{% endif %}
		</div>
	</div>
</div>
