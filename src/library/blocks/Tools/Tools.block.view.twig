<div class="b-Tools">
	<h1 class="b-Tools__title">{{fields.title}}</h1>

	<div class="b-Tools__container">
		<div class="b-Tools__container-left">
			<div class="b-Tools__search">
				<div class="b-Tools__search-input">
					<input class="b-Tools__search-input-text" type="text" name="search" placeholder="Search">
					<div class="b-Tools__search-input-icon">
						<img src="{{theme.link}}/static/img/setup-preferences.svg" width="16" height="16" alt="icon" class="b-Tools__search-input-icon-image">
					</div>
				</div>
				<button class="b-Tools__search-button">
					<svg width="18" height="18" viewbox="0 0 18 18" fill="none" xmlns="http://www.w3.org/2000/svg">
						<g clip-path="url(#clip0_1_4615)">
							<path d="M8.4375 15.1875C12.1654 15.1875 15.1875 12.1654 15.1875 8.4375C15.1875 4.70958 12.1654 1.6875 8.4375 1.6875C4.70958 1.6875 1.6875 4.70958 1.6875 8.4375C1.6875 12.1654 4.70958 15.1875 8.4375 15.1875Z" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
							<path d="M17.4367 17.4375L13.209 13.2097" stroke="white" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
						</g>
						<defs>
							<clipPath id="clip0_1_4615">
								<rect width="18" height="18" fill="white"/>
							</clipPath>
						</defs>
					</svg>
				</button>
			</div>

			<div class="b-Tools__categoryMenu">
				<div class="b-Tools__categoryMenu-top">
					<h1 class="b-Tools__categoryMenu-top-title">Select category</h1>
					<img src="{{theme.link}}/static/img/burger-menu-close.svg" width="42" height="42" alt="Close menu" class="b-Tools__categoryMenu-top-close">
				</div>
				<ul class="b-Tools__categoryMenu-list">
					{% for category in categories %}
						<li><a class="b-Tools__categoryMenu-list-item" href="#">{{category.name}}</a></li>
					{% endfor %}
					{# <li><a class="b-Tools__categoryMenu-list-item" href="#">Featured</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Anlytics</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Comments</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Ecommerce</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Events</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Forms</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Forums</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Live Chat</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Maps</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Memberships</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Search</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">SEO</a></li>
					<li><a class="b-Tools__categoryMenu-list-item" href="#">Surveys</a></li> #}
				</ul>
			</div>

		</div>
		<div class="b-Tools__container-right">
			{% for arg in args %}
				{% include "modules/ToolsCard/ToolsCard.module.twig" with {
					link: arg.url_post,
					title: arg.title_post,
					text: arg.post_excerpt,
					image: arg.post_image,
					imageAlt:  arg.title_post,
					textLayout: "textTitle",
					imageWidthNormal: 367,
					imageHeightNormal: 316,
					imageWidthSmall: 133,
					imageHeightSmall: 161,
					}%}
			{% endfor %}
		</div>
	</div>
</div>
