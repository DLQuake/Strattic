<div class="b-JobOffers">
	<div class="b-JobOffers__container">
		{% include "modules/Breadcrumbs/Breadcrumbs.module.twig" with {
			size: "big",
			crumbs: crumbs,
		}%}
		<div class="b-JobOffers__list">
			<div class="b-JobOffers__list-title">{{fields.title}}</div>
			<div class="b-JobOffers__list-offer">
				{% for arg in args %}
					{% include "modules/HelptCard/HelptCard.module.twig" with {
						link: arg.url_post,
						title: arg.title_post,
						text: arg.post_excerpt,
						image: arg.post_image,
						imageAlt:  arg.title_post,
						textLayout: "textTitle",
						imageWidthNormal: 367,
						imageHeightNormal: 316,
						imageWidthSmall: 133,
						imageHeightSmall: 161,
					}%}
				{% endfor %}
			</div>
		</div>
	</div>
</div>
