<footer class="m-FooterPrimary">
	<form class="m-FooterPrimary__form" method="post">
		<div class="m-FooterPrimary__form-title">Sign up to our Newsletter</div>
		<div class="m-FooterPrimary__form-input">
			<input class="m-FooterPrimary__form-input-email" type="email" placeholder="Your email">
			<input class="m-FooterPrimary__form-input-submit" type="submit" value="Sign up">
		</div>
	</form>

	<nav class="m-FooterPrimary__navigation">
		<ul class="m-FooterPrimary__navigation-menu -desktop">
			{% for item in nav.footer.items %}
				<li class="m-FooterPrimary__navigation-menu-item">
					{% if item.children %}
						{{item.title}}
						<ul class="m-FooterPrimary__navigation-childMenu">
							{% for child in item.children %}
								<li class="m-FooterPrimary__navigation-menu-childItem">
									{% include "modules/Button/Button.module.twig" with {
											type: "link",
											color: "black",
											link: child.link,
											text: child.title
										}%}
								</li>
							{% endfor %}
						</ul>
					{% endif %}
				</li>
			{% endfor %}
		</ul>
	</nav>

	<div class="m-FooterPrimary__navigation-rectangle"></div>

	<div class="m-FooterPrimary__data">
		<a href="/">
			<img src="{{theme.link}}/static/img/logo.svg" width="211" height="47" alt="Strattic" class="m-HeaderPrimary__logo"/>
		</a>
		<div class="m-FooterPrimary__data-copyrithing">
			Made with
			<svg width="20" height="18" viewbox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M18.3522 1.89841C16.1559 -0.297842 12.5934 -0.297842 10.3972 1.89841C10.2459 2.04966 10.1297 2.22216 9.99969 2.38466C9.86969 2.22216 9.75344 2.04966 9.60219 1.89841C7.40594 -0.297842 3.84344 -0.297842 1.64719 1.89841C-0.549062 4.09466 -0.549062 7.65716 1.64719 9.85341L9.99969 17.7509L18.3522 9.85341C20.5484 7.65716 20.5484 4.09466 18.3522 1.89841Z" fill="url(#paint0_linear_1_1356)"/>
				<defs>
					<linearGradient id="paint0_linear_1_1356" x1="-0.14028" y1="9.18077" x2="20.0821" y2="9.09397" gradientunits="userSpaceOnUse">
						<stop stop-color="#FB6165"/>
						<stop offset="1" stop-color="#E72E33"/>
					</linearGradient>
				</defs>
			</svg>
			in Jerusalem, Izrael
		</div>
		<ul class="m-FooterPrimary__data-socials">
			{% for item in socialmedia %}
				<li class="m-FooterPrimary__data-socials-item">
					<a href="{{item.social_media_adress.url}}" class="m-FooterPrimary__data-socials-item">
						<img src="{{item.social_media_icon}}" width="16" height="16" alt="{{item.social_media_adress.title}}" class="m-FooterPrimary__data-socials-item-image">
					</a>
				</li>
			{% endfor %}
		</ul>
	</div>
</footer>
