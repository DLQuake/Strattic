<a class="m-TeamCard" href="{{link}}" title="{{title}}">
	<picture>
		<source srcset="{{image|resize(imageWidthNormal, imageHeightNormal, "center")}}" media="(min-width: 480px)">
		<source srcset="{{image|resize(imageWidthSmall, imageHeightSmall, "center")}}">
	</picture>
	<img class="m-TeamCard__img" src="{{image|resize(imageWidthNormal, imageHeightNormal, "center")}}" alt="{{imageAlt}}" width="275" height="275"/>


	<div class="m-TeamCard__box {% if textLayout == " onlyTitle" %}-onlyTitle {% elseif textLayout == " titleText" %}-titleText {% elseif textLayout == " texttitle" %}-texttitle{% endif %}">
		<div class="m-TeamCard__title">
			{{title}}
			<svg width="14" height="10" viewbox="0 0 14 10" fill="none" xmlns="http://www.w3.org/2000/svg">
				<path d="M1 5H13" stroke="#FB4247" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
				<path d="M9 1L13 5L9 9" stroke="#FB4247" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
			</svg>
		</div>
		<div class="m-TeamCard__text">{{text}}</div>
	</div>
</a>
